def middle(choice):
    print "Lets modify our number that is classified as middle."
    result = (choice / 2) * 3 - 4
    print "Here is our result of changing it whilst in middle function: ", result

def top(choice):
    print "Lets modify our number that is classified as top."
    result = (choice / 4) * 3 + 12 - 17
    print "Here is our result of changing it whilst in top function: ", result

def bottom(choice):
    print "Lets modify our number that is classified as bottom."
    result = (choice / 1) * 3 + 29 - 2
    print "Here is our result of changing it whilst in bottom function: ", result
def start():
    print "We are going to play a little game."
    print "Enter a number"
    choice = raw_input("> ")
    choice = int(choice)
 #   if "0" in choice or "1" in choice:
  #      number = int(choice)
   # else:
    #    print "You didn't enter a number."   
    if(1000 > choice > 50):
        middle(choice)
    elif (choice > 1000):
        top(choice)
    else:
        bottom(choice)
        
start()
         
